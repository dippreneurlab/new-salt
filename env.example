# Firebase client config
NEXT_PUBLIC_FB_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FB_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FB_PROJECT_ID=your-project-id
NEXT_PUBLIC_FB_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FB_MESSAGING_SENDER_ID=000000000000
NEXT_PUBLIC_FB_APP_ID=1:000000000000:web:abcdefghijk

# Cloudflare Turnstile (demo keys; replace in prod)
NEXT_PUBLIC_TURNSTILE_SITE_KEY=1x00000000000000000000AA
TURNSTILE_SECRET_KEY=1x0000000000000000000000000000000AA

# Firebase admin (server-side)
FB_PROJECT_ID=your-project-id
FB_CLIENT_EMAIL=firebase-adminsdk@your-project-id.iam.gserviceaccount.com
FB_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\\nabc123...\\n-----END PRIVATE KEY-----\\n"

# FastAPI backend URLs (local vs remote)
NEXT_PUBLIC_BACKEND_REMOTE_URL=https://salthub-new-backend-628837369388.us-central1.run.app/
NEXT_PUBLIC_BACKEND_LOCAL_URL=http://localhost:5000

# Cloud SQL / Postgres
# Option 1: single connection string (recommended for local dev)
DATABASE_URL=postgres://user:password@127.0.0.1:5432/quote_tool
# Option 2: granular settings + optional Cloud SQL socket
POSTGRES_HOST=
POSTGRES_PORT=5432
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_DB=
POSTGRES_SSL=true
# If using the Cloud SQL Proxy / connector socket path on Cloud Run/Firebase hosting backends
CLOUD_SQL_CONNECTION_NAME=project:region:instance
